@model IEnumerable<PatientInformationPortal_Frontend.Models.Patient>

@{
    ViewData["Title"] = "AllPatientsData";
}

<style>
    

    table thead tr th,
    table tbody tr td{
        text-align:center;
    }
</style>

<div >
    <h1 class="col-4 m-auto shadow p-2 text-center" style="font-family:'Times New Roman', Times, serif; font-weight:600; font-size: 1.5em; color: darkblue">All Patients</h1>
</div>

<div class="d-flex justify-content-end">
    <a asp-controller="Patient" asp-action="InsertPatientData" class="btn btn-outline-primary">Create New</a>
</div>
<p>
    
</p>
<table class="table table-bordered table-light">
    <thead class="table-info">
        <tr>
            <th>
                Patient ID
            </th>
            <th>
                Patient Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Epilepsy)
            </th>
            <th>
                Disease
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PatientId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Epilepsy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiseaseId)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                    @Html.ActionLink("Delete", "DeletePatientData", new {  id = item.PatientId  }, new {@class="btn btn-sm btn-outline-danger"})
                    
            </td>
        </tr>
}
    </tbody>
</table>
